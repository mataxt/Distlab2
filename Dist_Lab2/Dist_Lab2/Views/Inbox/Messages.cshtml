@model IEnumerable<Dist_Lab2.ViewModels.InboxTitles>
@{
    ViewBag.Title = "Inbox Page";
}

<h2>@ViewBag.Title.</h2>
<h4>Check your inbox here</h4>

<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

@Html.ActionLink("Remove", null)


    <table class="table">
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Title)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Time)
            </th>
            <th></th>
        </tr>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td >
                    <div class="checkbox" style="margin-top: -2px; margin-right: 30px">
                        <label>
                            @Html.CheckBoxFor(m => Model.ElementAt(i).Selected, new { @checked = "checked" })
                        </label>
                    </div>
                </td>
                <td>
                    @if (Model.ElementAt(i).Status.Equals("UNREAD"))
                    {
                        <div style="margin-top: -15px">
                            <h3>
                                *
                            </h3>
                        </div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).Time)
                </td>
                <td>
                    <strong>
                        @Html.ActionLink("Read", "MessageContent", new {messageId = Model.ElementAt(i).MessageId})
                    </strong>
                </td>
            </tr>
        }
    </table>
}

<hr />

<h4>
    <a href="#" onclick="history.back(); return false;">Click here to go back</a>
</h4>