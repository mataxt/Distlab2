@model IEnumerable<Dist_Lab2.ViewModels.InboxTitles>
@{
    ViewBag.Title = "Inbox Page";
}

<h2>@ViewBag.Title.</h2>
<h4>Check your inbox here</h4>

<hr />

@Html.ActionLink("Mark as Read", null) |
@Html.ActionLink("Remove", null)

<table class="table">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Title)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Time)
        </th>
        <th></th>
    </tr>

    @foreach (var message in Model)
    {
        <tr>
            <td >
                <div class="checkbox" style="margin-top: -2px; margin-right: 30px">
                    <label>
                        @Html.CheckBox("Checkbox", false, new {messageId = message.MessageId})
                    </label>
                </div>
            </td>
            <td>
                @if(message.Status.Equals("UNREAD"))
                {
                <div style="margin-top: -15px">
                    <h3>
                        *
                    </h3>
                </div>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => message.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => message.Time)
            </td>
            <td>
                <strong>
                    @Html.ActionLink("Read", "MessageContent", new {messageId = message.MessageId})  
                </strong>
            </td>
        </tr>
    }
</table>

<hr />

<h4>
    <a href="#" onclick="history.back(); return false;">Click here to go back</a>
</h4>