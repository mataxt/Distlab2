@using Microsoft.AspNet.Identity

@model Dist_Lab2.ViewModels.HomeViewModels
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <center>
        <h1><strong>Home</strong></h1>
        <p class="lead">Hello, <i>
            @User.Identity.GetUserName()
        </i></p>
    </center>
</div>

<div class="row">
    <center>
        <div class="col-md-6">
            <h3>Last login</h3>
            @Html.DisplayFor(m => m.LastLogin)
        </div>
        <div class="col-md-6">
            <h3>Logins in the past month</h3>
            @Html.DisplayFor(m => m.LoginAmount)
        </div>
    </center> 
</div>
<div class="row">
    <div class="col-md-12">
        <center>
            <h3>Unread messages</h3>
            @Html.DisplayFor(m => m.UnreadMessages)
        </center>
    </div>
</div>